<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginStart="1dp"
        android:textAlignment="viewEnd"
        android:textColor="#0C0B37"
        android:textSize="50dp"
        android:textStyle="italic"
        android:text=""
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginStart="1dp"
        android:textAlignment="viewEnd"
        android:textColor="#0C0B37"
        android:textSize="50dp"
        android:textStyle="italic"
        android:text=""
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/calculation"
        app:layout_constraintRight_toRightOf="@+id/calculation"
        app:layout_constraintTop_toBottomOf="@id/calculation" />


    <Button
        android:id="@+id/btnAC"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#D7D7F3"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:text="AC"
         />

    <Button
        android:id="@+id/btnPosNeg"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#D7D7F3"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btnAC"
        app:layout_constraintTop_toTopOf="@id/btnAC"
        app:layout_goneMarginLeft="5dp"
        android:text="+/-"
        />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#D7D7F3"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btnPosNeg"
        app:layout_constraintTop_toTopOf="@id/btnPosNeg"
        android:text="delete"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        android:text="7"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7"
        android:text="8"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8"
        android:text="9"
        />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#5956C8"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9"
        android:text="/"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        android:text="4"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4"
        android:text="5"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5"
        android:text="6"
        />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#5956C8"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6"
        android:text="*"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        android:text="1"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1"
        android:text="2"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"
        android:text="3"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#5956C8"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3"
        android:text="+"
        />

    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:text="."
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#A2A1DA"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btnDecimal"
        app:layout_constraintTop_toTopOf="@id/btnDecimal"
        android:text="0"
        />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#5956C8"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        android:text="="
        />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#5956C8"
        android:textColor="#0C0B37"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/btnEqual"
        app:layout_constraintTop_toTopOf="@id/btnEqual"
        android:text="-"
        />



</androidx.constraintlayout.widget.ConstraintLayout>